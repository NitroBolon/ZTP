<Page x:Class="Fiszki.Easy"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fiszki"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Easy">

    <Grid>
        <Label FontFamily="Comic Sans MS" FontSize="50px" Content="Fiszki" Margin="0, 20, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="que" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" FontSize="20"/>
        
        <Button x:Name="button1" Click="Button_Click_false" HorizontalAlignment="Left" Margin="245, 210, 0, 0" VerticalAlignment="Top" Width="150" Height="40"/>
        <Button x:Name="button2" Click="Button_Click_true" HorizontalAlignment="Left" Margin="405, 210, 0, 0" VerticalAlignment="Top" Width="150" Height="40"/>

        <Button Content="Close" Click="Button_Click_close" Visibility="Hidden" x:Name="next" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="score" HorizontalAlignment="Center" Margin="0,330,0,0" VerticalAlignment="Top" Width="310" HorizontalContentAlignment="Center"/>

    </Grid>
</Page>
